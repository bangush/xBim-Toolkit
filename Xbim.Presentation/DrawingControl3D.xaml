<UserControl x:Class="Xbim.Presentation.DrawingControl3D"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Xbim.Presentation" 
    xmlns:ifc="http://schemas.Xbim.com/ifc"
    xmlns:HelixToolkit="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
>

    <HelixToolkit:HelixViewport3D  x:Name="Canvas" 
                                   ZoomAroundMouseDownPoint="True" 
                                   RotateAroundMouseDownPoint="True" 
                                   CameraMode="Inspect"
                                   CameraRotationMode="Turntable" 
                                   IsHeadLightEnabled="false" 
                                   ShowCoordinateSystem="True"
                                   ViewCubeLeftText="F"
                                   ViewCubeFrontText="R"
                                   ViewCubeRightText="B"
                                   ViewCubeBackText="L"
                                   >
        
            <HelixToolkit:HelixViewport3D.DefaultCamera>
            <PerspectiveCamera Position="100,-100,30" LookDirection="-100,100,-30" UpDirection="0,0,1" FieldOfView="61"/>
        </HelixToolkit:HelixViewport3D.DefaultCamera>
        <ModelVisual3D x:Name="BuildingModel"></ModelVisual3D>
        <HelixToolkit:DefaultLights></HelixToolkit:DefaultLights>
        <HelixToolkit:BillboardTextVisual3D  x:Name="PropertiesBillBoard"  Background="WhiteSmoke" Foreground="DarkBlue" FontSize="12" Position="0,0,0" Text="" DepthOffset="0.01" IsRendering="False" />
        <!-- The content of this visual is defined in MainViewModel.cs -->
        <ModelVisual3D Content="{Binding Model}"/>

        <!-- You can also add elements here in the xaml -->
        <HelixToolkit:GridLinesVisual3D x:Name="GridLines" Width="100" Length="100" MinorDistance="1" MajorDistance="10" Thickness="0.1"/>

    </HelixToolkit:HelixViewport3D>
   
</UserControl>
